<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Publisher -->
	<bean id="publisher1" class="ex07_java_into_xml.Publisher">
		<constructor-arg value="자바출판사" />
		<constructor-arg value="경기도 파주시" />
	</bean>

	<!-- Book -->
	<bean id="book1" class="ex07_java_into_xml.Book">
		<property name="title" value="나는 자바다" />
		<property name="price" value="20000" />
		<property name="publisher" ref="publisher1" />
	</bean>
	
	<!-- AppContext.java에서 생성한 Bean을 xml에 넣기 -->
	<!-- 
		AppContext.java는 애너테이션(@Configuration, @Bean)을 이용해 Bean을 생성하므로
		<context:annotation-config /> 태그가 필요하다
	-->
	
	
	
	
</beans>


