package ex10_component;

import org.springframework.stereotype.Component;

/*
	@component
	1. Bean으로 만들 클래스를 직접 Bean으로 생성한다
	2. XML이나 Java로 별도로 생성하지 않아도 생성된다
  
*/

@Component
public class Person {

	// field
	
	// constructor
	
	// method
	public void info() {
		System.out.println("나는 사람이다.");
	}
	
}


