<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.team.dproject.dao.MemberDAO">

	<!-- 로그인(login) -->
	<select id="login" resultType="com.team.dproject.dto.MemberDTO">
		SELECT MNO, MNAME, MID, MPW, MEMAIL, MPHONE, MGRADE, MREGDATE
		  FROM MEMBER
		 WHERE MID = #{mId}
		   AND MPW = #{mPw}
	</select>
	
	<!-- 아이디 체크(mIdCheck) -->
	<select id="mIdCheck" resultType="int">
		SELECT COUNT(MID)
		  FROM MEMBER
		 WHERE MID = #{mId}
	</select>
	
	<!-- 회원가입(join) -->
	<insert id="join">
		INSERT INTO MEMBER
		VALUES (MEMBER_SEQ.NEXTVAL, #{mName}, #{mId}, #{mPw}, #{mEmail}, #{mPhone}, #{mGrade}, SYSDATE)
	</insert>
	
	
	
	
	
	
	
	
	
	
	


</mapper>

