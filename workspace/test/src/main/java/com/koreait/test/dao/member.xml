<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.koreait.test.dao.MemberDAO">

	<!-- 로그인 -->
	<select id="login" resultType="com.koreait.test.dto.MemberDTO">
		SELECT NO, ID, PW, NAME, EMAIL, REGDATE
		  FROM MEMBER
		 WHERE ID = #{id}
		   AND PW = #{pw}
	</select>
	
	<!-- 아이디체크 -->
	<select id="idCheck" resultType="int">
		SELECT COUNT(ID)
		  FROM MEMBER
		 WHERE ID = #{id}
	</select>
	
	<!-- 회원가입 -->
	<insert id="join">
		INSERT INTO MEMBER
		VALUES (MEMBER_SEQ.NEXTVAL, #{id}, #{pw}, #{name}, #{email}, SYSDATE)
	</insert>
	
	
	
	
	
	
	
	
	
	

</mapper>
